---
import Layout from '../layouts/Layout.astro';
import { Button } from '@personal-website/ui';
import { AuthorProfile } from '@personal-website/ui/src/components/blog/AuthorProfile';
---

<Layout title="Personal Website - Home">
  <section class="py-20 md:py-28">    
    <div class="container">
      <div class="max-w-3xl">
        <AuthorProfile client:load />
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Welcome to My Personal Website
        </h1>
        <p class="text-xl text-muted-foreground mb-8">
          I'm a developer who loves to share my thoughts through writing and showcase my work.
          This site features a blog with MDX support and a portfolio section.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/blog">
            <Button client:load>Read My Blog</Button>
          </a>
          <a href="/portfolio">
            <Button client:load variant="outline">View My Work</Button>
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 md:py-16 bg-secondary/50">
    <div class="container">
      <h2 class="text-3xl font-bold mb-12 text-center">Featured Content</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Featured Blog Posts Placeholder -->
        <div class="rounded-lg border bg-card text-card-foreground shadow-sm overflow-hidden">
          <div class="h-48 bg-muted"></div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">Featured Blog Post</h3>
            <p class="text-muted-foreground mb-4">This is where a featured blog post excerpt would appear...</p>
            <a href="/blog" class="text-primary hover:text-primary/90">Read Post →</a>
          </div>
        </div>
        
        <!-- Featured Portfolio Item Placeholder -->
        <div class="rounded-lg border bg-card text-card-foreground shadow-sm overflow-hidden">
          <div class="h-48 bg-muted"></div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">Featured Project</h3>
            <p class="text-muted-foreground mb-4">This is where a featured project description would appear...</p>
            <a href="/portfolio" class="text-primary hover:text-primary/90">View Project →</a>
          </div>
        </div>
        
        <!-- About Me Placeholder -->
        <div class="rounded-lg border bg-card text-card-foreground shadow-sm overflow-hidden">
          <div class="h-48 bg-muted"></div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">About Me</h3>
            <p class="text-muted-foreground mb-4">Learn more about who I am, what I do, and my experience...</p>
            <a href="/about" class="text-primary hover:text-primary/90">More About Me →</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="container text-center">
      <h2 class="text-3xl font-bold mb-4">Want to get in touch?</h2>
      <p class="text-xl text-muted-foreground mb-8 max-w-2xl mx-auto">
        Feel free to reach out if you'd like to collaborate or just say hello.
      </p>
      <a href="mailto:hello@example.com">
        <Button client:load variant="default">Contact Me</Button>
      </a>
    </div>
  </section>
</Layout>